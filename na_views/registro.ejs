<link rel="stylesheet" href="css/login.css">
<form class="formulario"action="/insertarregistro" method="post" > 
    
    <h1 class="text-primary">Registrate</h1>
     <div class="contenedor">
     
     <div class="input-contenedor">
         <input type="text" placeholder="Nombre Completo" name="nom" id="nom">
         </div>
         <div class="input-contenedor">
         <input type="text" placeholder="Correo Electronico" name="email" id="email">
         </div>
